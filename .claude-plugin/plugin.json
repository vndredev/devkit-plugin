{
  "name": "devkit-plugin",
  "version": "0.0.0",
  "description": "Clean Architecture + Dev Workflow Plugin",
  "author": {
    "name": "vndredev"
  },
  "license": "MIT",
  "skills": [
    "./skills/"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/src/events/session.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/src/events/validate.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/src/events/format.py\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/src/events/plan.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
